        <Button x:Name="btndelete" Content="Удалить" HorizontalAlignment="Left" Margin="906,0,0,10" VerticalAlignment="Bottom" Width="75" Click="btndelete_Click"/>
    </Grid>
</Controls:MetroWindow>
