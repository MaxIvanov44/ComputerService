        xmlns:local="clr-namespace:Computer_Service"
        Title="ViewOrder" Height="588.234" Width="999">
    <Window.Background>

        <SolidColorBrush Color="#647382"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid   x:Name="viewdgr" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Margin="10,10,10,81"  Width="Auto" MouseDoubleClick="viewdgr_MouseDoubleClick"/>
